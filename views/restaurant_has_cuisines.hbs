<h1>Restaurant Cuisines</h1>

<div>
    <h3>Browse</h3>
    {{!-- Create a table --}}
    <table>

        {{!-- Header section --}}
        <thead>

            {{!-- For just the first row, we print each key of the row object as a header cell so we
            know what each column means when the page renders --}}
            <tr>
                {{#each data.[0]}}
                <th>
                    {{@key}}
                </th>
                {{/each}}
            </tr>
        </thead>

        {{!-- Body section --}}
        <tbody>

            {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
            {{#each data}}
            <tr>
                <td>{{this.restaurant_cuisineID}}</td>
                <td>{{this.cuisineID}}</td>
                <td>{{this.restaurantID}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <br>
</div>

<div>
    <h3>Add Cuisine to Restaurant</h3>
    <form action="/submit-form" method="post">

    <label for="restaurant_name">Restaurant Name:</label>
    <select for="restaurant_name" id="restaurant_name">
        <option value="1">Duke's Waikiki</option>
        <option value="2">Iron grill Hawaii Food Truck</option>
        <option value="3">Sushi Den</option>
        <option value="4">Mercantile Dining & Provision</option>
        <option value="5">Flagstaff House</option>
        <option value="empty" selected></option>
    </select>
    <br>
    
    <label for="cuisineDescription">Type of Cuisine:</label>
    <select for="cuisineDescription" id="cuisineDescription">
        <option value="Seafood">Seafood</option>
        <option value="Steak">Steak</option>
        <option value="Japanese">Japanese</option>
        <option value="Hawaiian">Hawaiian</option>
        <option value="American">American</option>
        <option value="empty" selected></option>
    </select>
    <br>
    

    <input type="submit" value="Submit">
    </form>
    <br>
</div>


